<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.twoplaytech.drbetting.util.ExtensionsKt" />

        <variable
            name="type"
            type="com.twoplaytech.drbetting.ui.basketball.BettingType" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1.5dp"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/sport_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_sport_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        app:sportIcon="@{type.sport}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_sport_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@{ExtensionsKt.convertDateToStringFormat(type.gameTime)}"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_date"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@{ExtensionsKt.getTime(type.gameTime)}"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_league_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@{type.leagueName}"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/layout_game"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_league_name">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_team_home"
                            android:layout_width="40dp"
                            android:layout_height="64dp"
                            app:team="@{type.teamHome}"
                            app:sport="@{type.sport}"
                            android:layout_marginStart="5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@id/iv_team_away"
                            android:layout_toEndOf="@id/iv_team_home"
                            android:gravity="center"
                            android:textSize="16sp"
                            app:game="@{type}" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_team_away"
                            android:layout_width="40dp"
                            android:layout_height="64dp"
                            app:team="@{type.teamHome}"
                            app:sport="@{type.sport}"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_game"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_betting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="Betting"
                                android:textAllCaps="true" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_betting_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_betting"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="@{type.bettingTip}"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="Result"
                                android:textAllCaps="true" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_tip_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_result"
                                android:layout_centerInParent="true"
                                android:text="@{type.result}"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="Status"
                                android:textAllCaps="true" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_tip_status"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/tv_status"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                app:result="@{type.status}" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
