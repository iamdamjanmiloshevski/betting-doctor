<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.twoplaytech.drbetting">
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.DrBetting">
    <activity
      android:name=".ui.UserPreferencesActivity"
      android:exported="true"
      android:label="@string/title_activity_user_preferences" />
    <activity
      android:name=".ui.NotificationsActivity"
      android:exported="true"
      android:label="@string/title_activity_notifications" />
    <activity
      android:name=".ui.FeedbackActivity"
      android:exported="true"
      android:label="@string/title_activity_feedback"
      android:theme="@style/Theme.DrBetting.NoActionBar" />
    <activity
      android:name=".ui.SplashActivity"
      android:noHistory="true"
      android:theme="@style/SplashScreenTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.AppInfoActivity"
      android:theme="@style/Theme.DrBetting.NoActionBar" />
    <activity
      android:name=".ui.settings.SettingsActivity"
      android:label="@string/title_activity_settings"
      android:theme="@style/Theme.DrBetting.NoActionBar" />
    <activity
      android:name=".ui.MainActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait" />

    <service
      android:name=".ui.services.BettingDoctorFirebaseMessagingService"
      android:exported="false">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT" />
      </intent-filter>
    </service>
  </application>

</manifest>